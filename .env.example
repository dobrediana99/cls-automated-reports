# Job auth (required for POST /run/weekly and /run/monthly)
JOB_TOKEN=

# Monday.com API
MONDAY_API_TOKEN=
# Throttling and retry (enterprise-grade). Monthly/weekly can produce many calls; throttle+retry avoids 429.
# MONDAY_MAX_CONCURRENT=2
# MONDAY_MIN_DELAY_MS=200
# MONDAY_TIMEOUT_MS=60000
# MONDAY_MAX_ATTEMPTS=8
# MONDAY_RETRY_BASE_MS=800
# MONDAY_RETRY_MAX_MS=30000

# OpenAI API for monthly report analysis (required for monthly job)
OPENAI_API_KEY=
# Model for monthly analysis (default: gpt-4.1-mini)
# OPENAI_MODEL=gpt-4.1-mini

# Gmail SMTP for weekly/monthly email send (required when DRY_RUN is not set)
GMAIL_USER=
GMAIL_APP_PASSWORD=

# Optional: set to 1 to write artifacts to out/ instead of sending email
# DRY_RUN=1

# Send mode: test (default) or prod. Only applies when DRY_RUN is not set.
# SEND_MODE=test
# In test mode, ALL emails go only to TEST_EMAILS (comma-separated). Required when SEND_MODE=test.
# TEST_EMAILS=you@example.com,other@example.com
